mixin detailNav(tab)
    ol.breadcrumb
        li
            a(href="#/report") Eyeball
        li
            a(href="#/report?{{reportFilter}}") Report
        li.active {{id}}

    ul.nav.nav-tabs
        li(class='#{(tab === "detail" ? "active" : "")}')
            a(href='#/detail/:{{id}}') Detail
        li(class='#{(tab === "har" ? "active" : "")}')
            a(href='#/har/:{{id}}') HAR analysis
        li(class='#{(tab === "history" ? "active" : "")}')
            a(href='#/history/:{{id}}') History

    div.well.well-sm
            p
                a(href="{{url}}",target="_blank").h4 {{url}}
            ul.list-inline
                li
                    strong ID
                    |&nbsp;{{id}}
                li
                    strong Timestamp
                    |&nbsp;{{timestamp}}
                li
                    strong Build
                    |&nbsp;{{build}}
                li
                    strong Tag
                    |&nbsp;{{tag}}
